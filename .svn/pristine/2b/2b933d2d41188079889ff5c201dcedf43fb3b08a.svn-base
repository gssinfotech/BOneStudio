<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="420dp"
    android:orientation="vertical"
    android:layout_gravity="center">
    <TextView 
        android:id="@+id/dialog_user_permissions_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:text="@string/manage_user_dialog_text"
        android:gravity="center"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <FrameLayout 
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
            <ImageButton
		        android:id="@+id/user_permissions_security_btn_id"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/my_securitybtn"/>
            <ImageButton
		        android:id="@+id/security_btn_tick_id"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/white_tick"
		        android:layout_gravity="center|bottom"
		        android:visibility="invisible"/>
            
        </FrameLayout>
        
        <FrameLayout 
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
            <ImageButton
		        android:id="@+id/user_permissions_remote_btn_id"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/my_remotebtn"/>
            <ImageButton
		        android:id="@+id/remote_btn_tick_id"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/white_tick"
		        android:layout_gravity="center|bottom"
		        android:visibility="invisible"/>
            
        </FrameLayout>

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
         <FrameLayout 
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
            <ImageButton
		        android:id="@+id/user_permissions_music_btn_id"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/my_musicbtn"/>
            <ImageButton
		        android:id="@+id/music_btn_tick_id"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/white_tick"
		        android:layout_gravity="center|bottom"
		        android:visibility="invisible"/>
            
        </FrameLayout>
        
        <FrameLayout 
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
            <ImageButton
		        android:id="@+id/user_permissions_devices_btn_id"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/my_devicebtn"/>
            <ImageButton
		        android:id="@+id/devices_btn_tick_id"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:contentDescription="@string/app_name"
		        android:background="@drawable/white_tick"
		        android:layout_gravity="center|bottom"
		        android:visibility="invisible"/>
            
        </FrameLayout>

    </LinearLayout>
    <Button 
        android:id="@+id/dialog_user_permissions_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Done"
        android:textColor="@color/white"
        android:background="@color/btn_background"/>
</LinearLayout>
