<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background" >
    
     <TextView 
	    android:id="@+id/mydevices_lights_heading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:padding="5dp"
	    android:text="@string/mydevices_central_lights_str"
		 android:gravity="center"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:textSize="17sp"
		 android:layout_marginTop="10dp"/>
	<ImageButton
		android:id="@+id/mydevices_lights_backbtn"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:background="@drawable/back_arrow_btn"
		android:layout_alignBottom="@+id/mydevices_lights_heading"
		android:layout_alignLeft="@+id/mydevices_lights_heading"
		android:layout_alignStart="@+id/mydevices_lights_heading"
		android:layout_alignTop="@+id/mydevices_lights_heading"
		android:contentDescription="@string/app_name"
		/>
     <Button 
	    android:id="@+id/mydevice_lights_settings_button"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentEnd="true"
	    android:layout_marginRight="20dp"
	    android:layout_marginEnd="20dp"
	    android:layout_marginBottom="10dp"
	    android:layout_marginTop="5dp"
	    android:background="@drawable/settings_menu"
	    android:onClick="onSettingButtonClicked"/>
      
      <ListView 
	    android:id="@+id/mydevices_lights_listview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/mydevices_lights_heading"
	    android:divider="@android:color/transparent"
	    android:layout_above="@+id/mydevices_lights_linear_layout"/>
      
      <LinearLayout 
	        android:id="@+id/mydevices_lights_linear_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true">
	        <Button 
		        android:id="@+id/mydevices_lights_allon_btn"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textSize="17sp"
		        android:background="@color/mydevices_lights_buton_color"
		        style="@android:style/ButtonBar"
		        android:textColor="@android:color/white"
		        android:text="@string/mydevices_lights_all_on"
		        android:onClick="onAllOnButtonClicked"/>
	       <Button 
		        android:id="@+id/mydevices_lights_alloff_btn"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textSize="17sp"
		        android:background="@color/mydevices_lights_buton_color"
		        style="@android:style/ButtonBar"
		        android:textColor="@android:color/white"
		        android:text="@string/mydevices_lights_all_off"
		        android:onClick="onAllOffButtonClicked"/>
	        <Button 
		        android:id="@+id/mydevices_lights_scenes_btn"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textSize="17sp"
		        android:background="@color/mydevices_lights_buton_color"
		        style="@android:style/ButtonBar"
		        android:textColor="@android:color/white"
		        android:text="@string/mydevices_lights_scenes"
		        android:onClick="onScenesButtonClicked"/>
	         
	    </LinearLayout>
    
</RelativeLayout>
