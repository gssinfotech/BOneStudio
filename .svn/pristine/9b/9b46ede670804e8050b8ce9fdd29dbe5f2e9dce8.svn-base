<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">
    <TextView
        android:id="@+id/mydevices_tracker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="TRACKER"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <ImageButton
        android:id="@+id/mydevices_thermostat_settingbtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_menu"
        android:layout_alignBottom="@+id/mydevices_tracker_title"
        android:layout_alignRight="@+id/mydevices_tracker_title"
        android:layout_alignEnd="@+id/mydevices_tracker_title"
        android:layout_alignTop="@+id/mydevices_tracker_title"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />


    <ImageButton
        android:id="@+id/mydevices_thermostat_backbtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow_btn"
        android:onClick="onSensorSettingButtonClicked"
        android:layout_alignBottom="@+id/mydevices_tracker_title"
        android:layout_alignLeft="@+id/mydevices_tracker_title"
        android:layout_alignStart="@+id/mydevices_tracker_title"
        android:layout_alignTop="@+id/mydevices_tracker_title"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/mydevices_tracker_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mydevices_tracker_time"
        android:text="Today"
        android:textColor="@color/motion_sensor_background"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_margin="25dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/refresh"
        android:layout_toLeftOf="@+id/mydevices_tracker_time"
        android:layout_above="@+id/mydevices_tracker_bule_circle"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/mydevices_tracker_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mydevices_tracker_bule_circle"
        android:text="46 minutes ago"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/mydevices_tracker_bule_circle"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerInParent="true"

        android:src="@drawable/blue_circle"/>
    <TextView
        android:id="@+id/mydevices_tracker_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="RSSI"
        android:textColor="@color/white"
        android:textSize="42dp"


        />

    <TextView
        android:id="@+id/mydevices_tracker_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/mydevices_tracker_bule_circle"
        android:text="-50"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/mydevices_tracker_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mydevices_tracker_bule_circle"
        android:text="50"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/mydevices_tracker_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Distance : 4.60 KM"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>
