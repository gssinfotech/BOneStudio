<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/app_background">
    
      <TextView 
	    android:id="@+id/mydevice_colorselction_heading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:padding="5dp"
	    android:text="@string/mydevices_lights_title"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:textSize="17sp"
		  android:layout_marginTop="10dp"/>
	<ImageButton
		android:id="@+id/mydevice_colorselction_backbtn"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:background="@drawable/back_arrow_btn"
		android:layout_alignBottom="@+id/mydevice_colorselction_heading"
		android:layout_alignLeft="@+id/mydevice_colorselction_heading"
		android:layout_alignStart="@+id/mydevice_colorselction_heading"
		android:layout_alignTop="@+id/mydevice_colorselction_heading"
		android:contentDescription="@string/app_name"
		/>
	<ImageButton
		android:id="@+id/mydevice_colorselction_settings_btn"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:background="@drawable/settings_menu"
		android:layout_alignBottom="@+id/mydevice_colorselction_heading"
		android:layout_alignRight="@+id/mydevice_colorselction_heading"
		android:layout_alignEnd="@+id/mydevice_colorselction_heading"
		android:layout_alignTop="@+id/mydevice_colorselction_heading"
		android:contentDescription="@string/app_name"
		android:layout_marginRight="10dp"
		android:layout_marginEnd="10dp" />
	  <android.support.v4.view.ViewPager
   		android:layout_below="@+id/mydevice_colorselction_heading"
        android:id="@+id/mydevices_colorseletion_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>
 
</RelativeLayout>
