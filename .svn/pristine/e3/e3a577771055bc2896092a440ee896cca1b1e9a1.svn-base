<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background" >
    
 <TextView 
	    android:id="@+id/devices_myrules_heading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:padding="5dp"
	    android:text="@string/devicesmyrules_title"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:textSize="17sp"
	 android:layout_marginTop="10dp"/>
	<ImageButton
		android:id="@+id/devices_myrules_backbtn"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:background="@drawable/back_arrow_btn"
		android:layout_alignBottom="@+id/devices_myrules_heading"
		android:layout_alignLeft="@+id/devices_myrules_heading"
		android:layout_alignStart="@+id/devices_myrules_heading"
		android:layout_alignTop="@+id/devices_myrules_heading"
		android:contentDescription="@string/app_name"
		/>
    
    <ImageButton
         android:id="@+id/devices_myrules_homebtn"
         android:layout_width="30dp"
         android:layout_height="wrap_content"
         android:background="@drawable/home"
         android:onClick="onHomeButtonClicked"
         android:layout_alignBottom="@+id/devices_myrules_heading"
 	    android:layout_alignRight="@+id/devices_myrules_heading"
 	    android:layout_alignEnd="@+id/devices_myrules_heading"
 	    android:layout_alignTop="@+id/devices_myrules_heading"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />
   
   <TextView 
	    android:id="@+id/devices_myrules_if"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:padding="5dp"
	    android:text="IF"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textSize="17sp"
	    android:layout_below="@+id/devices_myrules_homebtn"
	    />
   <EditText 
       android:id="@+id/devices_myrules_editbox1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:padding="10dp"
	    android:hint="(This)"
	    android:gravity="center"
	    android:background="@android:color/white"
	    android:textSize="17sp"
	    android:layout_below="@+id/devices_myrules_if"
       />
   <TextView 
	    android:id="@+id/devices_myrules_then"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:padding="5dp"
	    android:text="Then"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textSize="17sp"
	    android:layout_below="@+id/devices_myrules_editbox1"
	    />
   
     <EditText 
       android:id="@+id/devices_myrules_editbox2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:padding="10dp"
	    android:hint="(This)"
	    android:gravity="center"
	    android:background="@android:color/white"
	    android:textSize="17sp"
	    android:layout_below="@+id/devices_myrules_then"
       />
     
     <TextView 
	    android:id="@+id/devices_myrules_statement"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:text="Set your own rules using IFTTT(if This Then...."
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textSize="15sp"
	    android:layout_below="@+id/devices_myrules_editbox2"
	    />
      <TextView 
	    android:id="@+id/devices_myrules_notification"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:text="Notification"
	    android:gravity="left"
	    android:textColor="@color/white"
	    android:textSize="17sp"
	    android:layout_below="@+id/devices_myrules_statement"
	    android:textStyle="bold"
	    />
      <Switch 
        android:id="@+id/devices_myrules_notification_switch"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/devices_myrules_statement"
	    />
	    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
	    >
	    <Button 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"    
	    android:text="SAVE"
	    android:background="@color/add_device_save_btn"
	    android:layout_gravity="bottom"
	    android:onClick="onSaveButtonClicked"    />
	     <Button 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"    
	    android:text="CANCEL"
	    android:background="@color/add_device_cancel_btn"
	    android:layout_gravity="bottom"
	    android:onClick="onCancelButtonClicked"   />
        </LinearLayout>
</RelativeLayout>
