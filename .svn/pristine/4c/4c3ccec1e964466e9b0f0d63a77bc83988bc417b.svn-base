<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout 
        android:id="@+id/row_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
	    <ImageView 
	        android:id="@+id/lights_list_item_device_icon"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:src="@drawable/philips_hue_light"
	        android:contentDescription="@string/app_name"/>
	    <TextView 
	        android:id="@+id/lights_list_item_device_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Hue Lamp 1 ( Office )"
	        android:textColor="@color/white"
	        android:layout_toRightOf="@+id/lights_list_item_device_icon"
	        android:layout_toEndOf="@+id/lights_list_item_device_icon"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginStart="10dp"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_below="@+id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <ImageView 
	        android:id="@+id/lights_list_item_on_off_icon"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:src="@drawable/light_on_icon"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:contentDescription="@string/app_name"
	        android:layout_marginLeft="10dp"
	        android:layout_marginStart="10dp"/>
	     <SeekBar
	         android:id="@+id/lights_list_item_seekbar"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_toRightOf="@+id/lights_list_item_on_off_icon"
	         android:layout_toEndOf="@+id/lights_list_item_on_off_icon"
	         android:layout_toLeftOf="@+id/lights_list_item_hue_icon"
	         android:layout_toStartOf="@+id/lights_list_item_hue_icon"
	         android:layout_alignTop="@+id/lights_list_item_on_off_icon"
	         android:layout_alignBottom="@+id/lights_list_item_on_off_icon"
	         android:gravity="center_vertical"
	         android:layout_marginLeft="10dp"
	         android:layout_marginStart="10dp"
	         android:layout_marginRight="10dp"
	         android:layout_marginEnd="10dp"/>
	     <ImageView 
	        android:id="@+id/lights_list_item_hue_icon"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:src="@drawable/hue_color_icon"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentEnd="true"
	        android:contentDescription="@string/app_name"
	         android:layout_marginRight="10dp"
	        android:layout_marginEnd="10dp"/>
	</RelativeLayout>
	
</RelativeLayout>
