<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/mydevices_smoke_sensor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="SMOKE SENSOR"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="10dp"/>
    <ImageButton
        android:id="@+id/mydevices_smoke_sensor_backbtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow_btn"
        android:layout_alignBottom="@+id/mydevices_smoke_sensor_title"
        android:layout_alignLeft="@+id/mydevices_smoke_sensor_title"
        android:layout_alignStart="@+id/mydevices_smoke_sensor_title"
        android:layout_alignTop="@+id/mydevices_smoke_sensor_title"
        android:contentDescription="@string/app_name"
        />
    <Button
        android:id="@+id/mydevice_smoke_sensor_actionbarhome_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/settings_menu"
        android:onClick="onSettingButtonClicked"/>

    <ImageView
        android:id="@+id/mydevices_smoke_sensor_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sensor_red"
        android:layout_below="@+id/mydevices_smoke_sensor_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/mydevices_smoke_sensor_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/mydevices_smoke_sensor_img">

        <ImageView
            android:id="@+id/mydevices_smoke_sensor_co_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sensor_indicator_red"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/mydevices_smoke_sensor_co_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CO"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/mydevices_smoke_sensor_smoke_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sensor_indicator_yellow"
            />

        <TextView
            android:id="@+id/mydevices_smoke_sensor_smoke_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="SMOKE"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

         <ImageView
        android:id="@+id/mydevices_smoke_sensor_everythingok_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sensor_indicator_green"
        android:layout_marginRight="10dp"
                         />

        <TextView
            android:id="@+id/mydevices_smoke_sensor_everythingok_txt"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="EVERYTHING OK"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/mydevices_smoke_sensor_line_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mydevices_sensor_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/mydevices_smoke_sensor_linear1"
        />
    <TextView
        android:id="@+id/mydevices_smoke_sensor_status_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVERYTHING OK"
        android:textColor="@color/smoke_sensor_status_color"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mydevices_smoke_sensor_line_img"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/mydevices_smoke_sensor_status_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAFE"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mydevices_smoke_sensor_status_txt1"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/mydevices_smoke_sensor_line2_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mydevices_sensor_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/mydevices_smoke_sensor_status_txt2"
        />
</RelativeLayout>
