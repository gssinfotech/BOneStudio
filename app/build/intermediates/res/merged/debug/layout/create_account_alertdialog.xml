<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/dialog_background" >

   <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_title"
        android:gravity="center"
        android:textStyle="bold"
	    android:layout_marginTop="10dp"
	    android:padding="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="17sp"/>
    
    <TextView
        android:id="@+id/create_acc_dialog_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_str"
        android:gravity="center"
	    android:padding="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/_editTextDialogUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@android:color/white"
        android:hint="Enter OTP">
        <requestFocus />
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/dialog_line"/>
    <LinearLayout
        android:id="@+id/dialog_acc_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dialog_background">

        <Button
            android:id="@+id/dialog_acc_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/dialog_background"
            style="@android:style/ButtonBar"
            android:textColor="@color/dialog_btn_blue"
            android:text="@string/dialog_hub_to_home_cancel_string"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dialog_line"/>
        <Button
            android:id="@+id/dialog_acc_ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/dialog_background"
            style="@android:style/ButtonBar"
            android:textColor="@color/dialog_btn_blue"
            android:text="@string/home_screen_ok_btn_name"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"/>
    </LinearLayout>

</LinearLayout>