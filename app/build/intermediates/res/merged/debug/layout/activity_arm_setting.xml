<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background" >
    
    <TextView 
	    android:id="@+id/device_central_detail_heading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:padding="5dp"
	    android:text="@string/armsetting_title"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:textSize="17sp"
        android:layout_marginTop="10dp"/>
        <ImageButton
        android:id="@+id/device_central_backbtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow_btn"
        android:layout_alignBottom="@+id/device_central_detail_heading"
        android:layout_alignLeft="@+id/device_central_detail_heading"
        android:layout_alignStart="@+id/device_central_detail_heading"
        android:layout_alignTop="@+id/device_central_detail_heading"
        android:contentDescription="@string/app_name"
        />
    
    <LinearLayout
        android:id="@+id/arm_setting_arminhouseothers_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_marginBottom="30dp"
        android:background="@color/add_device_save_btn"
        > 
      <Button 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/add_device_cancel_btn"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         android:layout_marginBottom="2dp"
        android:text="Arm"
        android:textColor="@color/add_device_save_btn"
         android:textSize="14dp"
        />
      <Button 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/add_device_cancel_btn"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
       android:layout_marginBottom="2dp"
        android:text="Inhouse"
        android:textColor="@color/add_device_save_btn"
       android:textSize="14dp"
        />
       <Button 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/add_device_cancel_btn"
        android:layout_weight="1"
          android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         android:layout_marginRight="1dp"
         android:layout_marginBottom="2dp"
        android:text="Others"
        android:textColor="@color/add_device_save_btn"
         android:textSize="14dp"
        />
    </LinearLayout>
    <FrameLayout 
        android:id="@+id/arm_setting_detailsframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/arm_setting_savecan_layout"
        android:layout_below="@+id/arm_setting_arminhouseothers_layout"
        ></FrameLayout>
    
    <LinearLayout 
        android:id="@+id/arm_setting_savecan_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/add_device_save_btn"
        android:layout_weight="1"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:textSize="17dp"
            />
       <Button 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/add_device_cancel_btn"
        android:layout_weight="1"
        android:text="CANCEL"
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:textSize="17dp"
           />
    
    </LinearLayout>
    </RelativeLayout>