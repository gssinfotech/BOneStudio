<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">
    
    <TextView 
	    android:id="@+id/mydevices_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:padding="5dp"
	    android:text="@string/mydevices_title"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:textSize="17sp"
		android:layout_marginTop="10dp"/>
	<ImageButton
		android:id="@+id/mydevices_backbtn"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:background="@drawable/back_arrow_btn"
		android:layout_alignBottom="@+id/mydevices_title"
		android:layout_alignLeft="@+id/mydevices_title"
		android:layout_alignStart="@+id/mydevices_title"
		android:layout_alignTop="@+id/mydevices_title"
		android:contentDescription="@string/app_name"
		/>
    
    <ImageButton
         android:id="@+id/mydevices_settingbtn"
         android:layout_width="30dp"
         android:layout_height="wrap_content"
         android:background="@drawable/add_icon"
         android:onClick="onMyDevicesAddDeviceButtonClicked"
         android:layout_alignBottom="@+id/mydevices_title"
 	     android:layout_alignRight="@+id/mydevices_title"
 	     android:layout_alignEnd="@+id/mydevices_title"
 	     android:layout_alignTop="@+id/mydevices_title"
         android:contentDescription="@string/app_name"
         android:layout_marginRight="10dp"
         android:layout_marginEnd="10dp" />
    
    <ListView 
	    android:id="@+id/mydevices_listview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/mydevices_title"
	    android:divider="@android:color/transparent"/>
    
</RelativeLayout>
